#!/bin/bash

cd `dirname $0`

BACKUP_DIR="../mysql"

# MySQL database credentials
DB_USER="wordpress"
DB_PASS="wordpress-pwd"
DB_NAME="wordpress"
DB_FILE="wordpress.sql"

# Create the archive and the MySQL dump
mkdir -p $BACKUP_DIR
cd $BACKUP_DIR

# Restore the saved version
git pull

# Dump the MySQL data
mysql -u$DB_USER -p$DB_PASS $DB_NAME < $DB_FILE
